<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="10sp"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal" 
		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
 
		<LinearLayout android:orientation="vertical" 
			android:layout_weight="1"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
	 
			<ImageButton android:id="@+id/library"
				android:src="@drawable/android:ic_menu_gallery"
				android:layout_weight="1"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />
		
		  	<TextView android:gravity="center"
	  			android:text="Feeds"
				android:layout_marginBottom="10sp"
				android:layout_width="fill_parent"
	        	android:layout_height="wrap_content" />
	
		</LinearLayout>

		<LinearLayout android:orientation="vertical" 
			android:layout_weight="1"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
	 
			<ImageButton android:id="@+id/playlist" 
				android:src="@drawable/android:ic_menu_agenda"
				android:layout_weight="1"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />

		  	<TextView android:gravity="center"
	  			android:text="Playlist"
				android:layout_marginBottom="10sp"
				android:layout_width="fill_parent"
	        	android:layout_height="wrap_content" />
	
		</LinearLayout>

	</LinearLayout>

	<LinearLayout android:orientation="horizontal" 
		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout android:orientation="vertical" 
			android:layout_weight="1"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
	 
			<ImageButton android:id="@+id/downloaded" 
				android:src="@drawable/android:ic_menu_save" 
				android:layout_weight="1"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />
	
		  	<TextView android:gravity="center"
				android:text="Downloaded"
				android:layout_marginBottom="10sp"
				android:layout_width="fill_parent"
	        	android:layout_height="wrap_content" />
	
		</LinearLayout>

		<LinearLayout android:orientation="vertical" 
			android:layout_weight="1"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
	 
			<ImageButton android:id="@+id/queue" 
				android:src="@drawable/android:stat_sys_download" 
				android:layout_weight="1"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />

		  	<TextView android:gravity="center"
				android:text="Download Queue"
				android:layout_marginBottom="10sp"
				android:layout_width="fill_parent"
	        	android:layout_height="wrap_content" />
	
		</LinearLayout>

	</LinearLayout>
	
	<LinearLayout android:orientation="horizontal" 
		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout android:orientation="vertical" 
			android:layout_weight="1"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
	 
			<ImageButton android:id="@+id/search" 
				android:src="@drawable/android:ic_search_category_default" 
				android:layout_weight="1"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />
	
		  	<TextView android:gravity="center"
				android:text="Search"
				android:layout_marginBottom="10sp"
				android:layout_width="fill_parent"
	        	android:layout_height="wrap_content" />
	
		</LinearLayout>

		<LinearLayout android:orientation="vertical" 
			android:layout_weight="1"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
	 
			<ImageButton android:id="@+id/player" 
				android:src="@drawable/android:ic_media_play" 
				android:layout_weight="1"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />

		  	<TextView android:gravity="center"
				android:text="Player"
				android:layout_marginBottom="10sp"
				android:layout_width="fill_parent"
	        	android:layout_height="wrap_content" />
	
		</LinearLayout>

	</LinearLayout>
	
	<View
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:background="#FFFFFFFF" />

	<LinearLayout android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="50sp">

		<LinearLayout android:orientation="horizontal" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
	 
			<ImageButton android:id="@+id/resume"
				android:src="@drawable/android:ic_media_play" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<LinearLayout android:orientation="horizontal" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
		 
			  	<TextView android:id="@+id/resumetitle"
						android:layout_width="fill_parent"
			        	android:layout_height="wrap_content"
			        	android:text="@string/noresume"/>
		
			  	<TextView android:id="@+id/resumedesc"
						android:layout_width="fill_parent"
			        	android:layout_height="wrap_content"
			        	android:text="@string/noresume"/>
	
			</LinearLayout>
		
		</LinearLayout>
	
	</LinearLayout>
	
</LinearLayout>
