<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/text" 
		android:scrollbars="vertical" />

	<LinearLayout android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
		<ImageButton android:id="@+id/add" 
			android:src="@drawable/android:ic_input_add"
			android:gravity="center"
			android:layout_width="55sp"
			android:layout_height="55sp" />
			
		<ImageButton android:id="@+id/search" 
			android:src="@drawable/android:ic_menu_search"
			android:gravity="center"
			android:layout_width="55sp"
			android:layout_height="55sp" />

	</LinearLayout>
		
	<Spinner android:id="@+id/result" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

  	<TextView android:id="@+id/android:empty"
		android:visibility="gone" 
		android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:text="No result"/>

	<ImageButton android:id="@+id/addresult"
		android:visibility="gone" 
		android:src="@drawable/android:ic_input_add"
			android:gravity="center"
		android:layout_width="55sp"
		android:layout_height="55sp" />

</LinearLayout>
